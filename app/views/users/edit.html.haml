.row
  .span8
    = simple_form_for @user, wrapper: :bootstrap, html: { class: 'form-horizontal' } do |f|
      = f.input :name
      = f.input :email
      = f.input :twitter
      = f.input :location
      = f.input :bio
      = f.input :hireable, as: :boolean
      = f.input :display, as: :boolean, hint: 'Geef mijn info weer op de website'
      = f.button :submit, 'Opslaan', class: 'btn'

  .span4
    