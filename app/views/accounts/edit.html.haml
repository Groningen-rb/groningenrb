= simple_form_for current_user, html: { class: 'form-horizontal' } do |f|
  = f.input :name, input_html: { class: 'span3' }
  = f.input :email, input_html: { class: 'span3' }
  = f.input :twitter, input_html: { class: 'span3' }
  = f.input :location, input_html: { class: 'span3' }
  = f.input :bio, as: :text, input_html: { rows: 2, class: 'span3' }
  = f.input :hireable
  = f.input :public
  .form-actions
    = f.button :submit, 'Opslaan', class: 'btn btn-primary'

%p
  Ga je onze community verlaten?
  = link_to 'Ja, ik wil mijn account verwijderen', current_user, method: :delete